<configure xmlns="http://namespaces.zope.org/zope"
           xmlns:browser="http://namespaces.zope.org/browser"
           xmlns:five="http://namespaces.zope.org/five"
           i18n_domain="FacultyStaffDirectory">

    <browser:viewletManager
       for="....interfaces.IPersonGrouping"
       name="facultystaffdirectory.persongallery"
       provides="....interfaces.IPersonViewletManager"
       view="....interfaces.IGalleryListingFormat"
       permission="zope2.View"
       class="..person.PersonViewletManager"
       />

       <browser:viewlet
            for="....interfaces.IPersonGrouping"
            name="facultystaffdirectory.personname"
            manager="....interfaces.IPersonViewletManager"
            view="....interfaces.IGalleryListingFormat"
            template="name.pt"
            permission="zope2.View"
            />

        <browser:columnarViewlet
            for="....interfaces.IPersonGrouping"
            name="facultystaffdirectory.personportrait"
            manager="....interfaces.IPersonViewletManager"
            view="....interfaces.IGalleryListingFormat"
            template="portrait.pt"
            permission="zope2.View"
            column_heading="[gallery-portrait] Portrait"
            column_css_classes=""
            />

        <browser:viewlet
            for="....interfaces.IPersonGrouping"
            name="facultystaffdirectory.personjobtitles"
            manager="....interfaces.IPersonViewletManager"
            view="....interfaces.IGalleryListingFormat"
            template="../jobtitles.pt"
            permission="zope2.View"
            />

        <browser:viewlet
            for="....interfaces.IPersonGrouping"
            name="facultystaffdirectory.personofficephone"
            manager="....interfaces.IPersonViewletManager"
            view="....interfaces.IGalleryListingFormat"
            template="officephone.pt"
            permission="zope2.View"
            />

        <browser:viewlet
            for="....interfaces.IPersonGrouping"
            name="facultystaffdirectory.personemail"
            manager="....interfaces.IPersonViewletManager"
            view="....interfaces.IGalleryListingFormat"
            template="email.pt"
            permission="zope2.View"
            />

        <browser:viewlet
            for="....interfaces.IPersonGrouping"
            name="facultystaffdirectory.personprofilelink"
            manager="....interfaces.IPersonViewletManager"
            view="....interfaces.IGalleryListingFormat"
            template="profilelink.pt"
            permission="zope2.View"
            />

</configure>
