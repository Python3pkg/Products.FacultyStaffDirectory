<configure xmlns="http://namespaces.zope.org/zope"
           xmlns:browser="http://namespaces.zope.org/browser"
           xmlns:five="http://namespaces.zope.org/five"
           i18n_domain="FacultyStaffDirectory">

    <browser:viewletManager
       for="....interfaces.IPersonGrouping"
       name="facultystaffdirectory.persontabular"
       provides="....interfaces.IPersonViewletManager"
       view="....interfaces.ITabularListingFormat"
       permission="zope2.View"
       class="plone.app.viewletmanager.manager.OrderedViewletManager"
       />

       <browser:viewlet
            for="....interfaces.IPersonGrouping"
            name="facultystaffdirectory.personname"
            manager="....interfaces.IPersonViewletManager"
            view="....interfaces.ITabularListingFormat"
            template="name.pt"
            permission="zope2.View"
            />

        <browser:viewlet
            for="....interfaces.IPersonGrouping"
            name="facultystaffdirectory.personofficephone"
            manager="....interfaces.IPersonViewletManager"
            view="....interfaces.ITabularListingFormat"
            template="officephone.pt"
            permission="zope2.View"
            />

        <browser:viewlet
            for="....interfaces.IPersonGrouping"
            name="facultystaffdirectory.personemail"
            manager="....interfaces.IPersonViewletManager"
            view="....interfaces.ITabularListingFormat"
            template="email.pt"
            permission="zope2.View"
            />

</configure>
