<div class="headshot">
    <a href=""
       tal:attributes="href context/absolute_url">
        <tal:block condition="view/portrait|nothing">
            <img src="" alt=""
                 tal:replace="structure view/portrait" />
        </tal:block>
    </a>
</div>

<div class="caption">
    <h4 tal:content="context/Title" class="personName">[Name]</h4>

    <ul tal:condition="context/getJobTitles" class="jobTitle">
        <li tal:repeat="jobTitle context/getJobTitles" tal:content="jobTitle" />
    </ul>

    <div tal:condition="context/getOfficePhone"
         tal:content="context/getOfficePhone"
         class="officePhone"/>
    <div tal:condition="context/getEmail" 
         tal:content="structure view/email" 
         class="emailAddress"/>
    <div class="moreInfo">
        <a tal:attributes="href context/absolute_url"
           i18n:translate="FacultyStaffDirectory_moreAbout">
            More about 
            <span tal:replace="context/Title">[Name]</span>...
        </a>
    </div>

    <div class="visualClear"><!-- --></div>

</div>
